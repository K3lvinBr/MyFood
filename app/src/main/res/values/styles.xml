<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyFoodButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="MyFoodTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="MyFoodTabLayoutTextApperance" parent="Base.Widget.Design.TabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="rounded_photo">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="rounded_shop">
        <item name="cornerSize">50%</item>
    </style>

    <style name="botaoPadrao" parent="Widget.MaterialComponents.Button">
        <item name="colorControlHighlight">#ff404e</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>